---
import '../styles/global.css';
// Não vamos usar o Layout padrão aqui para ter controle total do centro da tela
// sem interferência de Header/Footer
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <title>404 - Página não encontrada!</title>
    <meta name="description" content="Página não encontrada. Retorne para a contagem regressiva do ENEM." />
  </head>

  <body class="bg-enem-bg h-screen w-screen overflow-hidden flex flex-col items-center justify-center relative selection:bg-red-500/30">
    
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-red-600/20 rounded-full blur-[120px] pointer-events-none animate-pulse-slow"></div>

    <main class="relative z-10 text-center px-4 max-w-2xl mx-auto space-y-8">
      
      <div class="relative">
        <h1 class="text-[10rem] md:text-[14rem] font-mono font-black leading-none tracking-tighter text-transparent bg-clip-text bg-gradient-to-b from-red-500 to-red-900 drop-shadow-2xl select-none">
          404
        </h1>
        
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full text-center">
            <span class="bg-red-950/80 text-red-400 text-xs md:text-sm font-mono px-3 py-1 rounded border border-red-800/50 backdrop-blur-md uppercase tracking-widest shadow-lg">
                System_Error: Not_Found
            </span>
        </div>
      </div>
      
      <div class="space-y-8">

        <a 
          href="/" 
          class="group relative inline-flex items-center gap-3 px-8 py-4 bg-red-600 text-white font-semibold rounded-xl 
                 transition-all duration-300 ease-out
                 hover:bg-red-500 hover:scale-105 hover:shadow-[0_0_40px_-10px_rgba(220,38,38,0.6)]
                 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-[#0f172a]"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 transition-transform group-hover:-translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          
          <span>Voltar ao Cronômetro</span>
        </a>
      </div>

    </main>

    <footer class="absolute bottom-6 text-slate-600 text-xs font-mono uppercase tracking-widest opacity-50">
      Error Code: 404 // Page_Missing
    </footer>

  </body>
</html>